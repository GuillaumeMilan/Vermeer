{
  "name": "Vermeer",
  "version": "0.1",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Vermeer"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ]
}
